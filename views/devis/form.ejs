<%- include('../partials/header') %>

<div class="container my-5">
  <div class="card devis-form">
    <div class="card-header">
      <h2 class="mb-0">Nouveau Devis</h2>
    </div>
    <div class="card-body">
      <form action="/devis" method="POST">
        <h4 class="text-primary mb-4">Informations Client</h4>
        
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="clientNom">Nom complet</label>
            <input type="text" class="form-control" id="clientNom" name="clientNom" required>
          </div>
          <div class="form-group col-md-6">
            <label for="clientEmail">Email</label>
            <input type="email" class="form-control" id="clientEmail" name="clientEmail">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="clientTelephone">Téléphone</label>
            <input type="tel" class="form-control" id="clientTelephone" name="clientTelephone">
          </div>
          <div class="form-group col-md-6">
            <label for="clientAdresse">Adresse</label>
            <input type="text" class="form-control" id="clientAdresse" name="clientAdresse">
          </div>
        </div>

        <hr class="my-4">
        <h4 class="text-primary mb-4">Détails du Projet</h4>

        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="surface">Surface habitable (m²)</label>
            <input type="number" class="form-control" id="surface" name="surface" min="50" required>
          </div>
          <div class="form-group col-md-4">
            <label for="hauteur">Hauteur sous plafond (m)</label>
            <input type="number" class="form-control" id="hauteur" name="hauteur" min="2.5" step="0.1" value="2.8" required>
          </div>
          <div class="form-group col-md-4">
            <label for="typeToiture">Type de toiture</label>
            <select class="form-control" id="typeToiture" name="typeToiture" required>
              <option value="standard">Tôle standard</option>
              <option value="isolee">Tôle isolée</option>
              <option value="bacacier">Bac acier</option>
              <option value="tuile">Tuile</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="mb-2">Options supplémentaires</label>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="terrasse" name="options" value="terrasse">
            <label class="form-check-label" for="terrasse">Terrasse</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="garage" name="options" value="garage">
            <label class="form-check-label" for="garage">Garage</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="climatisation" name="options" value="climatisation">
            <label class="form-check-label" for="climatisation">Préparation climatisation</label>
          </div>
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-primary btn-lg px-5">
            <i class="fas fa-calculator mr-2"></i>Calculer le Devis
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>